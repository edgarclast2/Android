<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="INGRESE PALABRA A TRADUCIR"
            android:id="@+id/textView"
            android:background="#ff1bff22" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_dni" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="TRADUCCION"
            android:id="@+id/textView2"
            android:background="#ff3fff39" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_nombreyapellido" />



        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="INGRESAR"
            android:id="@+id/btn_alta"
            android:onClick="alta"
            android:layout_weight="1"
            android:textColor="#ff1b31ff"
            android:gravity="top|fill_vertical"
            android:background="#ff22ff24" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TRADUCIR"
            android:id="@+id/btn_consultar"
            android:onClick="consulta"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:gravity="fill_vertical"
            android:textColor="#ff1b31ff"
            android:background="#ff2cff32" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>

</RelativeLayout>
